package phasebook.friendship;

import java.io.Serializable;
import java.sql.Date;
import java.util.Calendar;

import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;

public class Friendship implements Serializable {
	
	private static final long serialVersionUID = 1L;
	@Id @GeneratedValue(strategy = GenerationType.IDENTITY)
	private int ID, inviterUserID, inveteeUserID;
	private boolean accepted;
	private Date creationDate, deletionDate;
	
	
	protected Friendship()
	{
		super();
	}
	
	protected Friendship(int inviterUserID, int inveteeUserID) 
	{
		super();
		this.inviterUserID = inviterUserID;
		this.inveteeUserID = inveteeUserID;
	}
	
	protected void setCurrentTime()
	{
		this.isAccepted=false;
		
		//Get current time
		Calendar currenttime = Calendar.getInstance();
		this.creationDate = new Date((currenttime.getTime()).getTime());
	}

	/**
	 * @return the iD
	 */
	protected int getID() {
		return ID;
	}

	/**
	 * @param iD the iD to set
	 */
	protected void setID(int iD) {
		ID = iD;
	}

	/**
	 * @return the inviterUserID
	 */
	protected int getInviterUserID() {
		return inviterUserID;
	}

	/**
	 * @param inviterUserID the inviterUserID to set
	 */
	protected void setInviterUserID(int inviterUserID) {
		this.inviterUserID = inviterUserID;
	}

	/**
	 * @return the inveteeUserID
	 */
	protected int getInveteeUserID() {
		return inveteeUserID;
	}

	/**
	 * @param inveteeUserID the inveteeUserID to set
	 */
	protected void setInveteeUserID(int inveteeUserID) {
		this.inveteeUserID = inveteeUserID;
	}

	/**
	 * @return the accepted
	 */
	protected boolean isAccepted() {
		return accepted;
	}

	/**
	 * Set the status of the friendship request.
	 * @param true if {@literal}  false  if not
	 */
	protected void setAccepted(boolean accepted) {
		this.accepted = accepted;
	}

	/**
	 * @return the date of creation of the friendship
	 */
	protected Date getCreationDate() {
		return creationDate;
	}

	/**
	 * @param creationDate Set the date of creation of the friendship
	 */
	protected void setCreationDate(Date creationDate) {
		this.creationDate = creationDate;
	}

	/**
	 * @return the date of deletion of the friendship
	 */
	protected Date getDeletionDate() {
		return deletionDate;
	}

	/**
	 * @param deletionDate Set the date of deletion of the friendship
	 */
	protected void setDeletionDate(Date deletionDate) {
		this.deletionDate = deletionDate;
	}
	
	
	
}
